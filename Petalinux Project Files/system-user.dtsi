/include/ "system-conf.dtsi"
#include <dt-bindings/phy/phy.h>
/ {
	gpio-leds {
    		compatible = "gpio-leds";
    		led-pl1 {
        		label = "led-pl1";
        		gpios = <&axi_gpio_0 5 0>;
        		default-state = "on";
        		linux,default-trigger = "heartbeat";
    		};
	};
	
	gpio-keys-polled {
    		compatible = "gpio-keys-polled";
    		poll-interval = <10>;
    		#address-cells = <1>;
    		#size-cells = <0>;
    		autorepeat;
    		sw0 {
        		label = "sw0";
        		gpios = <&axi_gpio_0 0 0>;
        		linux,code = <108>; /* down */
        		autorepeat;
    		};
    		sw1 {
        		label = "sw1";
			gpios = <&axi_gpio_0 1 0>;
			linux,code = <103>; /* up */
			autorepeat;
    		};
	};
	
	gpio-keys {
    		compatible = "gpio-keys";
	    	#address-cells = <1>;
	    	#size-cells = <0>;
	    	autorepeat;
	    	button0 {
			label = "button0";
			gpios = <&axi_gpio_2 0 0>;
			linux,code = <108>; /* down */
			gpio-key,wakeup;
			autorepeat;
	    	};
	    	button1 {
			label = "button1";
			gpios = <&axi_gpio_2 1 0>;
			linux,code = <103>; /* up */
			gpio-key,wakeup;
			autorepeat;
	    	};
	};
};

&spi0 {
	status = "okay";
	spidev@0x00 {
		compatible = "rohm,dh2228fv";
		spi-max-frequency = <50000000>;
		reg = <0>;
		};
	spidev@0x01 {
		compatible = "rohm,dh2228fv";
		spi-max-frequency = <50000000>;
		reg = <1>;
		};
	spidev@0x02 {
		compatible = "rohm,dh2228fv";
		spi-max-frequency = <50000000>;
		reg = <2>;
		};
};


&axi_gpio_0 {
	gpio-line-names = "SW0", "SW1", "SW2", "SW3",
			  "LED0", "LED1", "LED2", "LED3";
};

&axi_gpio_1 {
	gpio-line-names = "RGB0_R", "RGB0_G", "RGB0_B",
			  "RGB1_R", "RGB1_G", "RGB1_B";
};

